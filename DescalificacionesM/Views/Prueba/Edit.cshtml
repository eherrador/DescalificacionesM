@model DescalificacionesM.Models.Prueba

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Prueba</legend>

        @Html.HiddenFor(model => model.PruebaID)

        <div class="editor-label">
            @Html.LabelFor(model => model.CompetenciaID, "Competencia")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CompetenciaID", String.Empty)
            @Html.ValidationMessageFor(model => model.CompetenciaID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EventoID, "Evento")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EventoID", String.Empty)
            @Html.ValidationMessageFor(model => model.EventoID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
