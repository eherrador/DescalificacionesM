@model IEnumerable<DescalificacionesM.Models.Categoria>

@{
    ViewBag.Title = "Categorías";
}

@*<h2>Index</h2>*@

<p>
    @Html.ActionLink("Nueva Categoría", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CategoriaID }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.CategoriaID })
        </td>
    </tr>
}

</table>

<ul data-role="listview" data-inset="true">
    @*<li data-role="list-divider">Navigation</li>*@
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
</ul>
